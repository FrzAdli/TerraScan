<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutSaved"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_6sdp"
        android:orientation="vertical"
        android:background="@drawable/bg_saved_scan"
        android:elevation="@dimen/_5sdp">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TextView
           android:id="@+id/soilType"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/_6sdp"
           android:layout_marginStart="@dimen/_16sdp"
           android:text="Tanah Humus"
           android:textSize="@dimen/_20ssp"
           android:textColor="@color/black"
           android:textStyle="bold"/>

           <ImageView
               android:id="@+id/dots"
               android:layout_width="@dimen/_20sdp"
               android:layout_height="@dimen/_20sdp"
               android:layout_marginTop="@dimen/_10sdp"
               android:layout_marginEnd="@dimen/_10sdp"
               android:src="@drawable/dots"
               android:layout_alignParentEnd="true"
               />

           <TextView
               android:layout_width="@dimen/_100sdp"
               android:layout_height="wrap_content"
               android:id="@+id/deleteAnalysis"
               android:padding="@dimen/_8sdp"
               android:layout_marginEnd="@dimen/_10sdp"
               android:gravity="center"
               android:background="@drawable/bg_mainnavbar"
               android:elevation="@dimen/_8sdp"
               android:layout_alignParentEnd="true"
               android:layout_below="@+id/dots"
               android:visibility="invisible"
               android:text="delete"
               android:textColor="@color/black"
               android:textStyle="bold"
               android:textSize="@dimen/_12ssp"/>


       </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/soilImage"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_marginHorizontal="@dimen/_16sdp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--Jenis Tanah-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:layout_marginRight="10dp"
                            android:text="Jenis Tanah:"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textAppearance="@style/ph" />

                        <TextView
                            android:id="@+id/jenisTanah"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:layout_marginRight="10dp"
                            android:text="Tanah Humus"
                            android:textStyle="bold"
                            android:textColor="@color/neutral_70"
                            android:textAppearance="@style/ph" />

                    </LinearLayout>

                    <!--                Akurasi-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:layout_marginRight="10dp"
                            android:text="Akurasi:"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textAppearance="@style/ph" />

                        <TextView
                            android:id="@+id/akurasi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:layout_marginRight="10dp"
                            android:text="Tanah Humus"
                            android:textStyle="bold"
                            android:textColor="@color/neutral_70"
                            android:textAppearance="@style/ph" />

                    </LinearLayout>

                    <!--                Iklim-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:layout_marginRight="10dp"
                            android:text="Iklim:"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textAppearance="@style/ph" />

                        <TextView
                            android:id="@+id/iklim"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:layout_marginRight="10dp"
                            android:text="Tanah Humus"
                            android:textStyle="bold"
                            android:textColor="@color/neutral_70"
                            android:textAppearance="@style/ph" />

                    </LinearLayout>

                    <!--                Suhu rata-rata-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:layout_marginRight="10dp"
                            android:text="Suhu Rata-Rata:"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textAppearance="@style/ph" />

                        <TextView
                            android:id="@+id/suhu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:layout_marginRight="10dp"
                            android:text="38"
                            android:textStyle="bold"
                            android:textColor="@color/neutral_70"
                            android:textAppearance="@style/ph" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <!--                Rekomendasi Tanaman-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginStart="@dimen/_16sdp"
                android:text="Rekomendasi Tanaman:"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAppearance="@style/ph" />

            <TextView
                android:id="@+id/rekomendasiTanaman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:text="Tanah Humus"
                android:textStyle="bold"
                android:textColor="@color/neutral_70"
                android:textAppearance="@style/ph" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>