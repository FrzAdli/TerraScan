<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:overScrollMode="never"
    android:padding="@dimen/_20sdp"
    android:scrollbars="none"
    tools:context=".activities.SignInActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/terrascan_logo" />

        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create an account"
            android:textStyle="bold"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/header_title_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect with your friends today!!"
            android:textStyle="bold"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/neutral_40" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:text="Email"
            android:textColor="@color/primary_60"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/inputEmail"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:inputType="textEmailAddress"
            android:hint="Enter your email"
            android:textColorHint="@color/neutral_40"
            android:background="@drawable/edit_text_background"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Phone Number"
            android:textColor="@color/primary_60"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/inputPhoneNumber"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:inputType="phone"
                android:hint="Enter your phone number"
                android:textColorHint="@color/neutral_40"
                android:background="@drawable/edit_text_background"
                app:layout_constraintTop_toTopOf="@id/layoutPhoneNumber"
                app:layout_constraintBottom_toBottomOf="@id/layoutPhoneNumber" />

            <ImageButton
                android:id="@+id/togglePassword2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_eye"
                android:layout_marginEnd="@dimen/_10sdp"
                app:layout_constraintStart_toStartOf="@id/inputPhoneNumber"
                app:layout_constraintTop_toTopOf="@+id/inputPhoneNumber"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintBottom_toBottomOf="@id/inputPhoneNumber"/>



            </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Password"
            android:textColor="@color/primary_60"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutPasswordSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/inputPasswordSignUp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:inputType="textPassword"
                android:hint="Enter your Password"
                android:textColorHint="@color/neutral_40"
                android:background="@drawable/edit_text_background"
                app:layout_constraintTop_toTopOf="@id/layoutPasswordSignUp"
                app:layout_constraintBottom_toBottomOf="@id/layoutPasswordSignUp" />

            <ImageButton
                android:id="@+id/togglePasswordSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_eye"
                android:layout_marginEnd="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="@+id/inputPasswordSignUp"
                app:layout_constraintTop_toTopOf="@+id/inputPasswordSignUp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintBottom_toBottomOf="@id/inputPasswordSignUp"/>



        </androidx.constraintlayout.widget.ConstraintLayout>




        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSignUp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:backgroundTint="@color/primary_90"
            android:text="Sign Up"
            app:cornerRadius="@dimen/_8sdp"
            android:textStyle="bold"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/white"/>


        <LinearLayout
            android:id="@+id/layoutSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_gravity="center_horizontal|bottom">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Already have an account ?"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/neutral_40"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login "
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/primary_60"
                />
        </LinearLayout>
    </LinearLayout>





</ScrollView>
